@model Vehicle

@inject IUsersRepository taxi;

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
<form class="row" asp-action="AddTo" enctype="multipart/form-data">
    
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Create New TaxiDriver Vehicle</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">TaxiDriver Vehicle</a></li>
                            <li class="breadcrumb-item active">New Vehicle</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">General</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <input type="datetime" asp-for="Stander.CreatedAt" hidden />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="inputName" asp-for="DriverId"></label>
                                @{
                                    var res = await taxi.GetAllAsync("Users", x => x.UserType == "TaxiDriver");
                                }
                                <select id="inputStatus" class="form-control custom-select" asp-for="DriverId">
                                    @foreach (var emp in res)
                                    {
                                        <option value="@emp.Id">@emp.FirstName @emp.LastName</option>
                                    }
                                </select>
                                <span class="text-danger" asp-validation-for="DriverId"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputName" asp-for="CarType"></label>
                                <input type="text" id="inputName" class="form-control" asp-for="CarType">
                                <span class="text-danger" asp-validation-for="CarType"></span>
                            </div>
                            
                            <div class="form-group">
                                <label for="inputName" asp-for="CarModel"></label>
                                <input type="textٍ" id="inputName" class="form-control" asp-for="CarModel">
                                <span class="text-danger" asp-validation-for="CarModel"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputName" asp-for="FuelType"></label>
                                <input type="text" id="inputName" class="form-control" asp-for="FuelType">
                                <span class="text-danger" asp-validation-for="FuelType"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputName" asp-for="CityKey"></label>
                                <input type="text" id="inputName" class="form-control" asp-for="CityKey">
                                <span class="text-danger" asp-validation-for="CityKey"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputName" asp-for="LicensePlateNumber"></label>
                                <input id="inputName" class="form-control" asp-for="LicensePlateNumber">
                                <span class="text-danger" asp-validation-for="LicensePlateNumber"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                

                <div class="col-md-6">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title">budget</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                                <div class="form-group">
                                    <label for="inputStatus" asp-for="VehicleLicenseCardImage"></label>
                                    <input type="file" name="formFile" class="form-control" asp-for="VehicleLicenseCardImage">
                                    <span class="text-danger" asp-validation-for="VehicleLicenseCardImage"></span>
                                </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                </div>
                <!-- /.card -->
            <div class="row">
                <div class="col-md-12">
                    <a href="#" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Create" class="btn btn-success float-right">
                </div>
            </div>
        </section>
        <!-- /.content -->
    </form>
</div>
<!-- /.content-wrapper -->
